<project name="jwt" default="all" basedir=".">
  <!-- Name of project and version -->
  <property name="proj.name" value="jwt"/>
  <property name="proj.version" value="3.1.11"/>

  <!-- Global properties for this build -->
  <property name="src.java.dir" value="src"/>
  <property name="build.dir" value="build"/>
  <property name="dist.dir" value="dist"/>
  <property name="archives.dir" value="archives"/>
  <property name="javadoc.dir" value="doc/javadoc"/>
  <property name="userguide.dir" value="doc/userguide"/>

  <!-- Javadoc classpath declaration -->
  <path id="project.javadoc.classpath">
    <fileset dir=".">
      <include name="lib/*.jar"/>
      <include name="dist/*.jar"/>
      <include name="servlet-lib/servlet-api-3.0.jar"/>
    </fileset>
  </path>

  <target name="all" depends="dist">
  </target>
  
  <!-- Clean up -->
  <target name="clean">
    <delete dir="${build.dir}" />
    <delete dir="${dist.dir}" />
    <delete dir="${archives.dir}" />
  </target>

  <condition property="jdk6">
    <not>
      <contains string="${java.version}" substring="1.5"
		casesensitive="false" />
    </not>
  </condition>

  <target name="build-servlet3" if="jdk6">
    <mkdir dir="${build.dir}"/>
    <javac
       srcdir="${src.java.dir}"
       destdir="${build.dir}"
       debug="on"
       source="1.5"
       target="1.5">
      <classpath >
        <path id="project.classpath">
          <fileset dir=".">
            <include name="lib/*.jar"/>
            <include name="servlet-lib/servlet-api-3.0.jar"/>
          </fileset>
        </path>
      </classpath>
      <include name="eu/webtoolkit/jwt/ServletApi3.java"/>
      <include name="eu/webtoolkit/jwt/WtServletContextListener.java"/>
    </javac>
  </target>

  <!-- Compile Java source -->
  <target name="build" depends="build-servlet3">
    <mkdir dir="${build.dir}"/>
    <javac
       srcdir="${src.java.dir}"
       destdir="${build.dir}"
       debug="on"
       source="1.5"
       target="1.5">
      <classpath >
        <path id="project.classpath">
          <fileset dir=".">
            <include name="lib/*.jar"/>
            <include name="servlet-lib/servlet-api-2.5-6.0.2.jar"/>
          </fileset>
        </path>
      </classpath>
	  <exclude name="eu/webtoolkit/jwt/ServletApi3.java"/>
	  <exclude name="eu/webtoolkit/jwt/WtServletContextListener.java"/>
    </javac>

    <copy todir="${build.dir}/eu/webtoolkit/jwt/skeletons">
      <fileset dir="${src.java.dir}/eu/webtoolkit/jwt/skeletons"/>
    </copy>
    <copy todir="${build.dir}/eu/webtoolkit/jwt/wt-resources">
      <fileset dir="${src.java.dir}/eu/webtoolkit/jwt/wt-resources"/>
    </copy>
    <copy todir="${build.dir}">
      <fileset dir="${src.java.dir}" defaultexcludes="yes">
	<include name="eu/webtoolkit/jwt/*.java"/>
	<include name="eu/webtoolkit/jwt/*.properties"/>
	<include name="eu/webtoolkit/jwt/servlet/*.java"/>
	<include name="eu/webtoolkit/jwt/chart/*.java"/>
	<include name="eu/webtoolkit/jwt/utils/*.java"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean-javadoc">
    <delete dir="${javadoc.dir}"/>
  </target>

  <target name="javadoc" depends="dist">
    <javadoc
       access="protected"
       destdir="${javadoc.dir}"
       author="true"
       version="true"
       use="true"
       windowtitle="JWt Javadoc API"
       classpathref="project.javadoc.classpath"
       overview="overview.html"
       >
      <fileset dir="${src.java.dir}" defaultexcludes="yes">
	<include name="eu/webtoolkit/jwt/*.java"/>
	<include name="eu/webtoolkit/jwt/servlet/*.java"/>
	<include name="eu/webtoolkit/jwt/chart/*.java"/>
	<include name="eu/webtoolkit/jwt/utils/WebGraphics2D.java"/>
	<!--<exclude name="eu/webtoolkit/jwt/utils/*.java"/>-->
	<exclude name="eu/webtoolkit/jwt/XSSFilter.java"/>
	<exclude name="eu/webtoolkit/jwt/ServletApi25.java"/>
	<exclude name="eu/webtoolkit/jwt/ServletApi3.java"/>
      </fileset>
    </javadoc>
    <copy todir="${javadoc.dir}/eu/webtoolkit/jwt/doc-files">
      <fileset dir="${src.java.dir}/eu/webtoolkit/jwt/doc-files"/>
    </copy>
    <copy todir="${javadoc.dir}/eu/webtoolkit/jwt/chart/doc-files">
      <fileset dir="${src.java.dir}/eu/webtoolkit/jwt/chart/doc-files"/>
    </copy>
  </target>

  <target name="asciidoc">
    <exec executable="asciidoc">
      <arg value="-a toc" />
      <arg value="-a numbered" />
      <arg value="${userguide.dir}/userguide.doc" />
    </exec>
  </target>

  <target name="dist" depends="build">
    <mkdir dir="${dist.dir}"/>
    <jar destfile="dist/${proj.name}-${proj.version}.jar" basedir="${build.dir}" />
    <copy todir="${dist.dir}">
      <fileset dir="lib">
        <include name="*.jar"/>
      </fileset>
    </copy>
  </target>

  <target name="mvn" depends="dist">
    <jar jarfile="dist/${proj.name}-${proj.version}-javadoc.jar">
      <fileset dir="${javadoc.dir}" />
    </jar>

    <jar jarfile="dist/${proj.name}-${proj.version}-sources.jar">
      <fileset dir="${src.java.dir}" />
    </jar>
  </target>

  <target name="archive" >
    <delete dir="${build.dir}" />
    <mkdir dir="${archives.dir}" />
    <zip destfile="${archives.dir}/jwt-${proj.version}.zip">
      <zipfileset 
        dir="." 
        prefix="jwt-${proj.version}/" 
        excludes=".git/**,.git*,${archives.dir}/**" />
    </zip>
    <tar destfile="${archives.dir}/jwt-${proj.version}.tar.gz" compression="gzip">
      <tarfileset 
        dir="." 
        prefix="jwt-${proj.version}/" 
        excludes=".git/**,.git*,${archives.dir}/**" />
    </tar>
  </target>
    

  <target name="release" depends="dist,javadoc,asciidoc,archive" >
  </target>
</project>
